{
    "manifestVersion": 1,
    "identifier": "thorium-manifest://org.edrlab.thorium.francis",
    "version": "3.0.3",
    "title": {
        "en": "francis test customization profile"
    },
    "description": {
        "en": "thorium test profile"
    },
    "welcomeScreen": "<html>Hello World<br/><a href=\"https://edrlab.org\">EDRLAB</a></html>",
    "theme": {
        "color": {
            "dark": {
                "neutral": "#4B0000",
                "primary": "#660000",
                "secondary": "#800000",
                "border": "#990000",
                "background": "#330000",
                "appName": "#990000",
                "scrollbarThumb": "#012345",
                "buttonsBorder": "#543210"
            },
            "light": {
                "neutral": "#FFFFFF",
                "primary": "#FFE5E5",
                "secondary": "#FFCCCC",
                "border": "#FFB3B3",
                "background": "#FFF0F0",
                "appName": "#FFCCCC",
                "scrollbarThumb": "#012345",
                "buttonsBorder": "#543210"
            }
        }
    },
    "images": [
        {
            "rel": "logo",
            "href": "./images/logo.svg"
        }
    ],
    "links": [
        {
            "rel": "catalog",
            "href": "https://demoreader.cantookstation.com/v1/home.opds2",
            "title": {
                "en": "francis catalog"
            },
            "properties": {
                "authenticate": {
                    "type": "application/opds-authentication+json",
                    "href": "https://demoreader.cantookstation.com/v1/sign_in.opds2"
                },
                "logo": {
                    "rel": "logo",
                    "href": "./images/catalog.svg"
                }
            }
        },
        {
            "rel": "catalog",
            "href": "https://test.opds.io/2.0/home.json",
            "title": {
                "en": "a second catalog"
            },
            "properties": {
                "authenticate": {
                    "type": "application/opds-authentication+json",
                    "href": ""
                },
                "logo": {
                    "rel": "logo",
                    "href": "./images/catalog.svg"
                }
            }
        },
        {
            "rel": "catalog",
            "href": "https://test.opds.io/2.0/home.json",
            "title": {
                "en": "second same catalog"
            },
            "properties": {
                "authenticate": {
                    "type": "application/opds-authentication+json",
                    "href": ""
                },
                "logo": {
                    "rel": "logo",
                    "href": "./images/catalog.svg"
                }
            }
        }
    ]
}