{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://readium.org/webpub-manifest/schema/publication.schema.json",
  "title": "Readium Web Publication Manifest",
  "properties": {
    "@context": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "metadata": {
      "$ref": "metadata.schema.json"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "uniqueItems": true,
      "contains": {
        "properties": {
          "rel": {
            "anyOf": [
              {
                "type": "string",
                "const": "self"
              },
              {
                "type": "array",
                "contains": {
                  "const": "self"
                }
              }
            ]
          }
        },
        "required": [
          "rel"
        ]
      }
    },
    "readingOrder": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "uniqueItems": true
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "uniqueItems": true
    }
  },
  "required": [
    "metadata",
    "links",
    "readingOrder"
  ],
  "additionalProperties": {
    "$ref": "subcollection.schema.json"
  },
  "allOf": [
    {
      "description": "All resources listed in the reading order should contain a media type.",
      "properties": {
        "readingOrder": {
          "items": {
            "required": [
              "type"
            ]
          }
        }
      }
    },
    {
      "description": "All resources listed in the publication should contain a media type.",
      "properties": {
        "resources": {
          "items": {
            "required": [
              "type"
            ]
          }
        }
      }
    }
  ]
}
